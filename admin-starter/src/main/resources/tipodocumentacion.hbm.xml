<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="entidades.TipoDocumentacion" table="tipodocumentacion">

        <id name="OID" type="string">
            <column name="OIDTipoDocumentacion"/>
            <generator class="uuid2"/>
        </id>

          <property name="codTipoDocumentacion" type="int">
            <column name="codTipoDocumentacion"/>
        </property>

        <property name="nombreTipoDocumentacion" type="string">
            <column name="nombreTipoDocumentacion"/>
        </property>
        
        <property name="descTipoDocumentacion" type="string">
            <column name="descTipoDocumentacion"/>
        </property>

        <property name="fechaHoraBajaTD" column="fecha_baja" type="timestamp"/>
        
    </class>

</hibernate-mapping>